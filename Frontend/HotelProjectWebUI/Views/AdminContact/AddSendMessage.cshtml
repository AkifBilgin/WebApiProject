@model CreateSendMessageDto

@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage" class="btn btn-primary btn-block">Neue Nachricht</a>
    @await Html.PartialAsync("SidebarAdminContactPartial")
    <h5 class="mt-5 m-b-10">Categories</h5>
    @await Html.PartialAsync("SidebarAdminContactCategoryPartial")
</div>
<div class="email-right-box">
    <div class="toolbar" role="toolbar">
        <div class="btn-group m-b-20">
            <button type="button" class="btn btn-light">
                <i class="fa fa-archive"></i>
            </button>
            <button type="button" class="btn btn-light">
                <i class="fa fa-exclamation-circle"></i>
            </button>
            <button type="button" class="btn btn-light">
                <i class="fa fa-trash"></i>
            </button>
        </div>
        <div class="btn-group m-b-20">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
            </button>
            <div class="dropdown-menu">
                <span class="dropdown-header">Kopieren</span> 
                <a class="dropdown-item" href="javascript: void(0);">Social</a> 
                <a class="dropdown-item" href="javascript: void(0);">Promotions</a> 
                <a class="dropdown-item" href="javascript: void(0);">Updates</a>
                <a class="dropdown-item" href="javascript: void(0);">Forum</a>
            </div>
        </div>
        <div class="btn-group m-b-20">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-tag"></i>  <b class="caret m-l-5"></b>
            </button>
            <div class="dropdown-menu">
                <span class="dropdown-header">Kategorien:</span> 
                <a class="dropdown-item" href="javascript: void(0);">Updates</a> 
                <a class="dropdown-item" href="javascript: void(0);">Sozial</a> 
                <a class="dropdown-item" href="javascript: void(0);">Promotions</a>
                <a class="dropdown-item" href="javascript: void(0);">Forum</a>
            </div>
        </div>
        <div class="btn-group m-b-20">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                More <span class="caret m-l-5"></span>
            </button>
            <div class="dropdown-menu">
                <span class="dropdown-header">Mehr :</span>
                <a class="dropdown-item" href="javascript: void(0);">Als ungelesen markieren</a>  
                <a class="dropdown-item" href="javascript: void(0);">zur Favoriten</a> 
                <a class="dropdown-item"
                                                                                                                                                                                                                       href="javascript: void(0);">Add Star</a>  <a class="dropdown-item" href="javascript: void(0);">Mute</a>
            </div>
        </div>
    </div>
    <div class="compose-content mt-5">
        <form method="post">
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="ReceiverEmail" placeholder=" Empfänger">
            </div>
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="Subject" placeholder=" Betreff">
            </div>
            <div class="form-group">
                <textarea class="textarea_editor form-control bg-light" rows="15" asp-for="Message" placeholder="Ihre Nachricht ..."></textarea>
            </div>
      
    <div class="text-left m-t-15">
        <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit"><i class="fa fa-paper-plane m-r-5"></i> Senden</button>
        <button class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20" type="button"><i class="ti-close m-r-5 f-s-12"></i> Abbrechen</button>
    </div>
        </form>

    </div>
</div>
