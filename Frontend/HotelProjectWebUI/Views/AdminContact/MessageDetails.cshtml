@model GetMessageByIdDto
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage" class="btn btn-primary btn-block">Neue Nachricht</a>
    @await Html.PartialAsync("SidebarAdminContactPartial")
    <h5 class="mt-5 m-b-10">Kategorien</h5>
    @await Html.PartialAsync("SidebarAdminContactCategoryPartial")
</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                Posteingang <span class="caret m-l-5"></span>
            </button>
        </div>
    </div>

    <div class="read-content">
        <div class="media pt-5">
            <div class="media-body">
                <h5 class="m-b-3">@Model.Name</h5>
                <p class="m-b-2">@Model.Date.ToShortDateString()</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Absender: @Model.Email</small>
            </div>
        </div>
        
        <p>@Model.Message</p>
       
        <hr>
    </div>
</div>




