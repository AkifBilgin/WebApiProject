@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Zimmer</h1>

<table class="table table-bordered">
    <tr>
        <th>Zimmernummer</th>
        <th>Preis pro Nacht</th>
        <th>Titel</th>
        <th>Beschreibung</th>
        <th>Löschen</th>
        <th>Update</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RoomNumber</td>
            <td>@item.PricePerNight</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-danger">Löschen</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-success">Update</a></td>
        </tr>
    }

</table>
<a href="/AdminRoom/AddRoom" class="btn mb-1 btn-rounded btn-outline-info">Neue Zimmer</a>