@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rolle ändern</h1>

<form method="post" asp-action="UpdateRole" asp-controller="Role">
<input type="hidden" asp-for="RoleID" />
<label>Name</label>
<input type="text" asp-for="RoleName" class="form-control" />
<br />
<button class="btn btn-outline-success">Ändern</button>
</form>

