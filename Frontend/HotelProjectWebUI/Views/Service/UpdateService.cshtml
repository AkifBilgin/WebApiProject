@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input asp-for="ServiceID" type="hidden"/> 
    <br />
    <label>Service Icon</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />
    <label>Überschrift</label>
    <input type="text" asp-for="Title" class="form-control"/>
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Beschreibung</label>
    <input type="text" asp-for="Description" class="form-control"/>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-primary">Update Service</button>
</form>

