@model EditUserViweModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Profildaten aktualisieren</h1>
<form method="post">
    <label>Vorname</label>
    <input type="text" class="form-control" asp-for="FirstName" />
    <label>Nachname</label>
    <input type="text" class="form-control" asp-for="LastName" />
    <label>Username</label>
    <input type="text" class="form-control" asp-for="Username" readonly />
    <label>Email</label>
    <input type="text" class="form-control" asp-for="Email" />
    <label>Passwort</label>
    <input type="password" class="form-control" asp-for="Password" />
    <label>Passwort wiederholen</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword" />
    <button class="btn btn-success">Aktualisieren</button>
</form>

