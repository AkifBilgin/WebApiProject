@model List<ResultToDoListDto>


<div class="col-lg-3 col-md-6">
    <div class="card">
        <div class="card-body px-0">
            <h4 class="card-title px-4 mb-3">Todo</h4>
            <div class="todo-list">
                <div class="tdl-holder">
                    <div class="tdl-content">
                        <ul id="todo_list">
                            @foreach (var item in Model)
                            {
                                if(item.Status == false)
                                {
                                    <li><label><input type="checkbox"><i></i><span>@item.Description</span><a href='/ToDoList/DeleteTask/@item.ToDoListID' class="ti-trash"></a></label></li>
                                }
                                else
                                {
                                    <li><label><input type="checkbox" checked><i></i><span>@item.Description</span><a href='/ToDoList/DeleteTask/@item.ToDoListID' class="ti-trash"></a></label></li>
                                }

                                    
                                

                            }
                            
@*                             <li><label><input type="checkbox" checked><i></i><span>Stand up</span><a href='#' class="ti-trash"></a></label></li>
                            <li><label><input type="checkbox"><i></i><span>Don't give up the fight.</span><a href='#' class="ti-trash"></a></label></li>
                            <li><label><input type="checkbox" checked><i></i><span>Do something else</span><a href='#' class="ti-trash"></a></label></li> *@
                        </ul>
                    </div>
                    <div class="px-4">
                   
                    @await Html.PartialAsync("~/Views/ToDoList/AddTask.cshtml", new CreateToDoListDto())
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>