@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Mitarbeiter Name</th>
        <th>Bereich</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <th>@item.StaffID</th>
        <td>@item.Name</td>
        <td>@item.Title</td>
            <td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-danger">Löschen</a></td>
            <td><a href="/Staff/UpdateStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-success">Update</a></td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Details</a></td>


    </tr>
    }
</table>

<a href="/Staff/AddStaff" class="btn mb-1 btn-rounded btn-outline-info">Neuer Mitarbeiter</a>
 
